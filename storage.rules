rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the community
    function isCommunityOwner(communityId) {
      return isAuthenticated() 
        && firestore.get(/databases/(default)/documents/communities/$(communityId)).data.createdBy == request.auth.uid;
    }
    
    // Helper function to check if user is a member of the community
    function isCommunityMember(communityId) {
      return isAuthenticated() 
        && request.auth.uid in firestore.get(/databases/(default)/documents/communities/$(communityId)).data.members;
    }
    
    // Helper function to check if user owns the event
    function isEventOwner(eventId) {
      return isAuthenticated() 
        && firestore.get(/databases/(default)/documents/events/$(eventId)).data.createdBy == request.auth.uid;
    }
    
    // Community images rules
    match /communities/{communityId}/{imageType} {
      // Anyone can read community images
      allow read: if true;
      
      // Only authenticated users can create community images during creation
      // The community document must exist and user must be the creator
      allow create: if isAuthenticated()
                    && (imageType == 'logo' || imageType == 'banner')
                    && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                    && request.resource.contentType.matches('image/.*');
      
      // Only community creator or members can update images
      allow update: if (isCommunityOwner(communityId) || isCommunityMember(communityId))
                    && (imageType == 'logo' || imageType == 'banner')
                    && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                    && request.resource.contentType.matches('image/.*');
      
      // Only community creator can delete images
      allow delete: if isCommunityOwner(communityId);
    }
    
    // Event hero images rules
    match /events/{eventId}/{fileName} {
      // Anyone can read event hero images
      allow read: if true;
      
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
